  "version": "0.2.0",
  "configurations": [
    {
      "type": "gdb",
      "request": "launch",
      "name": "Debug with GDB",
      "target": "${workspaceFolder}/build/game",
      "cwd": "${workspaceRoot}",
      "valuesFormatting": "parseText",
      "gdbpath": "C:/msys64/ucrt64/bin/gdb.exe"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug",
      "program": "${workspaceFolder}/build/game",
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug physics",
      "program": "${workspaceFolder}/build/game",
      "args": [
        "--physics-debug-draw"
      ],
      "cwd": "${workspaceFolder}"
    }
  ]
}